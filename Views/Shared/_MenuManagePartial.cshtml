@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authorizationService

@{
    var result = await authorizationService.AuthorizeAsync(User, "ViewManageMenu");
}

@if (result.Succeeded) {
  <div class="dropdown">
    <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
      Manage
    </button>
    <ul class="dropdown-menu">
      <li>
          <a class="dropdown-item" asp-area="Database" asp-controller="DatabaseManage" asp-action="Index">
              Database
          </a>
          <a class="dropdown-item" asp-area="Contact" asp-controller="Contact" asp-action="Index">
              Quản lý liên hệ
          </a>
          <a class="dropdown-item" asp-area="Identity" asp-controller="Role" asp-action="Index">
              Quản lý role (vai trò)
          </a>
          <a class="dropdown-item" asp-area="Identity" asp-controller="User" asp-action="Index">
              Quản lý người dùng
          </a>
      </li>
    </ul>
  </div>
}