@model App.Models.Contact.ContactModel

@{
    ViewData["Title"] = "Gửi liên hệ tới AppMvc";
}

<hr />

<div class="container">
    <div class="row">
     <div class="contact-firstcol p-2 col-md-4">
        <img src="~/images/email.png" alt="">
        <h1>@ViewData["Title"]</h1>
        <h4>Chúng tôi luôn lắng nghe ý kiến của các bạn!</h4>
    </div>
    <div class="col-md-8">
        <form class="formcontact" asp-action="SendContact">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Message" class="control-label"></label>
                <textarea rows="5"  asp-for="Message" class="form-control" ></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Gửi liên hệ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

</div>
